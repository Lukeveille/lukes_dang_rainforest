<%= render "product_info", product: @product %>

<%= link_to "Edit", edit_product_path%> | 
<%= link_to 'Delete', product_path(@product), method: :delete, data: {confirm: "Are you sure you want to delete the product '#{@product.name}'? This cannot be undone!"} %>

<h4>Reviews:</h4>

<% @reviews.each do |review| %>
  <p>    
    <%= review.comment %>
    <br />
    <%= review.created_at %> | <%= link_to "Edit", edit_product_review_url(review.product_id, review) %>
  </p>
<% end %>

<h4>New Review:</h4>

<%= render partial: "reviews/form", locals: { product: @product, review: @review } %>